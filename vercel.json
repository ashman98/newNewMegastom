{
    "builds": [
        {
            "src": "public/index.php",
            "use": "@vercel/php"
        },
        {
            "src": "vite.config.js",
            "use": "@vercel/static-build",
            "config": { "distDir": "public/build" }
        }
    ],
    "routes": [
        {
            "src": "/(.*)",
            "dest": "/public/index.php"
        }
    ],
    "ignoreCommand": "echo 'vendor directory ignored'"
}
